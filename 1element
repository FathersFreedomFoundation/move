<!-- Purpose: Ensure the iframe is responsive and functions correctly on iPhones -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- Ensuring the viewport is set correctly for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Responsive Iframe for iPhone</title>
    <style>
        /* Base styles for iframe container */
        .responsive-iframe-container {
            position: relative;
            overflow: hidden; /* Hide scrollbars */
            width: 100%; /* Full width */
            height: 100vh; /* Full viewport height */
        }

        /* Styles for iframe */
        .responsive-iframe-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
            overflow: hidden; /* Hide scrollbars */
        }

        /* Adjust styles for mobile devices */
        @media (max-width: 600px) {
            .responsive-iframe-container {
                height: 50vh; /* Adjust height for smaller mobile devices */
            }
        }
    </style>
</head>
<body>
    <div class="responsive-iframe-container">
        <iframe src="https://skybox.blockadelabs.com/e/97da6df4b9184232091cd5cb0faa933b" allowfullscreen></iframe>
    </div>
</body>
